@model RiwiSalud.Models.Usuario
@{
    ViewData["Title"] = "Inicio";
}

<style>
    .container{
        width: 90%;
        min-width: 85%;
        height: 60vh;
        margin:auto;
        background-color: rgba(227, 227, 227, 0.215);
        padding: 10px;
        border: 1px solid black;
    }

    .contenedor{
        width: 100%;
        height: 100%;
        display: flex;
        margin: auto;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .contenedor .row{
        width: 70%;
        height: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .top-container{
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        border-bottom: 1px solid black;
    }
    
    .top-left{
        width: auto;
    }

    .top-left nav{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .top-left nav a, .top-left nav span{
        margin-right: 5px;
    }

    .top-mid{
        width: auto;
    }

    .user-box{
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        align-content: center;
    }
    .user-box i{
        font-size: 12px;
        color:blue;
        border: 1px solid blue;
        padding: 4px;
        border-radius: 50%;
        margin-right: 5px;
    }

    .top-right{
        width: auto;
    }
    .top-right i{
        font-size: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        color:red;
        border: 1px solid red;
        padding: 5px;
        border-radius: 50%;
    }

    .top-right i:hover{
        font-size: 12px;
        color:black;
        background-color: red;
        border: 1px solid red;
        cursor: pointer;
        padding: 6px;
        border-radius: 40%;
        transition: cubic-bezier(0.215, 0.610, 0.355, 1);
        transition-duration: 0.2s;
    }

    .container-contain {
        width: 100%;
        @* background-color: rgb(200, 255, 3); *@
        height: 300px;
    }

    h3{
        color: rgb(156, 189, 37);
    }

    .container-opciones{
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;

    }

    .col a{
        width: 100px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }

    .col a:hover{
        background-color: blue;
        color: white;
    }

    .btn-regresar{
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>

<div class="contenedor">
    <div class="row">
        <div class="col">
        <h2 class="text-primary text-center mb-3">Bienvenido a <b>Riwi Salud</b></h2>
            <form asp-controller="Usuarios" asp-action="Index" method="post">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Seleccione el tipo de docuento</label>
                    <select class="form-control" name="TipoDocumento" id="exampleFormControlSelect1">
                        <option disabled selected> Tipo de Documento</option>
                        <option value="Cedula">CC - Cèdula de Ciudadanìa</option>
                        <option value="Targeta de Identidad">TI - Tarjeta de Identidad</option>
                        <option value="Registro Civil">RC - Registro Civil de Nacimiento</option>
                        <option value="Pasaporte">PS - Pasaporte</option>
                    </select>
                
                <div class="form-group mt-3">
                    <label for="exampleFormControlTextarea1">Ingrese su nùmero de documento</label>
                        <input class="form-control" name="NumeroDocumento" placeholder="Ejemplo: 100393213">


                </div>
                <div class="form-group d-flex justify-content-center mt-3">
                    <button type="sumbit" class="btn btn-primary">Ingresar</button>
                </div>
            </form>
        </div>
    </div>
</div>

